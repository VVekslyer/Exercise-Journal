<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'

        MDBottomNavigation:
            text_color_active: 0, 0, 0, 1 # black color for the icons
            panel_color: 1, 1, 1, 1 # white color for background
            size_hint: None, None
            width: root.width
            height: root.height


            MDBottomNavigationItem:
                name: "screen 1"
                icon: 'home'

                Home:


            MDBottomNavigationItem:
                name: "screen 2"
                icon: 'lightning-bolt'

                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Workouts'
                        markup: True
                        height: root.height * 1.65
                        width: dp(300)
                        padding_x: dp(15)
                        size_hint: None, None
                        text_color: (0,0,0,1)
                        font_style: 'H4'
                        font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'

            MDBottomNavigationItem:
                name: "screen 3"
                icon: 'chart-bar'

                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Progress'
                        markup: True
                        height: root.height * 1.65
                        width: dp(300)
                        padding_x: dp(15)
                        size_hint: None, None
                        text_color: (0,0,0,1)
                        font_style: 'H4'
