#: import FloatingPlusButton widgets.FloatingPlusButton
#: import Home widgets.Home
#: import Workouts widgets.Workouts
#: import Progress widgets.Progress 
#: include widgets/SettingsScreen.kv
#: include widgets/Home.kv

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: app.user_name
            font_name: 'assets/fonts/Inter-Medium.ttf'
            left_action_items: [["account-circle", lambda x: app.set_user_settings_screen(x)]]
            right_action_items: [["dots-vertical", lambda x: app.callback(x)]]
            md_bg_color: app.theme_cls.bg_light
            specific_text_color: (0,0,0,1)
            elevation: 0  

        MDBottomNavigation:
            text_color_active: 1, 0, 0, 1 # red color for the icons
            panel_color: 1, 1, 1, 1 # white color for background

            MDBottomNavigationItem: 
                name: "screen 1"
                text: "Home"
                icon: 'home'     

                Home:
       

            MDBottomNavigationItem:
                name: "screen 2"
                text: "Workout"
                icon: 'lightning-bolt'

                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Workout'
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        markup: True
                        padding_x: '24dp'
                        padding_y: '12dp'
                        text_color: (0,0,0,1)
                        font_style: 'H4'
                        font_name: 'assets/fonts/Inter-SemiBold.ttf'

                    FloatingPlusButton:

            MDBottomNavigationItem:
                name: "screen 3"
                text: "Progress"
                icon: 'chart-bar'

                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Progress'
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        markup: True
                        padding_x: '24dp'
                        padding_y: '12dp'
                        text_color: (0,0,0,1)
                        font_style: 'H4'
                        font_name: 'assets/fonts/Inter-SemiBold.ttf'
