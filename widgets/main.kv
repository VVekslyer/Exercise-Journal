<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'

        MDBottomNavigation:
            text_color_active: 0, 0, 0, 1 # black color for the icons
            panel_color: 1, 1, 1, 1 # white color for background
            size_hint: None, None
            width: root.width
            height: root.height


            MDBottomNavigationItem:
                name: "screen 1"
                icon: 'home'

                Home:


            MDBottomNavigationItem:
                name: "screen 2"
                icon: 'lightning-bolt'

                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Workout'
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        markup: True
                        padding_x: '24dp'
                        padding_y: '12dp'
                        text_color: (0,0,0,1)
                        size_hint: None, None
                        font_style: 'H4'
                        font_name: 'assets/fonts/Inter-SemiBold.ttf'

            MDBottomNavigationItem:
                name: "screen 3"
                icon: 'chart-bar'

                BoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Progress'
                        text_size: self.size
                        valign: 'top'
                        halign: 'left'
                        markup: True
                        padding_x: '24dp'
                        padding_y: '12dp'
                        text_color: (0,0,0,1)
                        size_hint: None, None
                        font_style: 'H4'
                        font_name: 'assets/fonts/Inter-SemiBold.ttf'
