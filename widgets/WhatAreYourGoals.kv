<WhatAreYourGoals>:
    MDBoxLayout:
        orientation: 'vertical' 

        MDToolbar:
            md_bg_color: app.theme_cls.bg_light
            left_action_items: [["arrow-left", lambda x: app.go_back(x, 'signup-with-email')]]
            specific_text_color: (0,0,0,1)
            
        MDLabel:
            text: "    What are \n    your goals?"
            font_style: 'H4'    
            font_size: "40sp"
            font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'
            size_hint: 1, 0.75
            pos_hint: {'center_y': 0.5}
        

        MDBoxLayout:
            orientation: 'vertical'
            spacing: 20
            

            MDRoundFlatButton:
                text: "Strength"
                text_color: 0.73, 0.49, 0.28, 1
                md_bg_color: 1, 1, 1, 1
                font_size: "18sp"
                size_hint: 0.7, None
                height: dp(25)
                pos_hint: {'center_x': 0.5}
                font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'
                line_color: 0.73, 0.49, 0.28, 1
            
            MDRoundFlatButton:
                text: "Hypertrophy"
                text_color: 0.73, 0.49, 0.28, 1
                md_bg_color: 1, 1, 1, 1
                font_size: "18sp"
                size_hint: 0.7, None
                height: dp(25)
                pos_hint: {'center_x': 0.5}
                font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'
                line_color: 0.73, 0.49, 0.28, 1
                
            MDRoundFlatButton:
                text: "Functionality"
                text_color: 0.73, 0.49, 0.28, 1
                md_bg_color: 1, 1, 1, 1
                font_size: "18sp"
                size_hint: 0.7, None
                height: dp(25)
                pos_hint: {'center_x': 0.5}
                font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'
                line_color: 0.73, 0.49, 0.28, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1.0, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: 20
            
            MDFillRoundFlatButton:
                text: "Continue"
                text_color: 1, 1, 1, 1
                md_bg_color: 0.73, 0.49, 0.28, 1
                font_size: "18sp"
                size_hint: 0.7, None
                valign: 'center'
                height: dp(25)
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'
                on_release: app.go_to(self, 'what-is-your-weight')

            MDTextButton:
                text: "Skip For Now"
                color: (0, 0, 0, 1)
                valign: 'center'
                pos_hint: {'center_x': 0.5}
                font_size: "12sp"
                font_name: 'assets/fonts/Sofia-Pro-Light.ttf'
                size_hint: None,None
        
        MDBottomAppBar:
            
        