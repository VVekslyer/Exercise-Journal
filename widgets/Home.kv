#: import FloatingPlusButton widgets.FloatingPlusButton

<WorkoutItem@MDSwiperItem>:
    RelativeLayout:
        FitImage:
            source: "./assets/images/deadlift.png"
            radius: [20,]

        MDLabel:
            text: str(Home.date(2021, 12, 20))
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]
            padding_x: 25
            y: root.height - dp(50)
            color: (1, 1, 1, .8)
            font_name: 'assets/fonts/Inter-SemiBold.ttf'
        

<Home>:
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'Home'
            text_size: self.size
            valign: 'top'
            halign: 'left'
            padding_x: '24dp'
            padding_y: '12dp'
            text_color: (0,0,0,1)
            font_style: 'H4'
            font_name: 'assets/fonts/Inter-SemiBold.ttf'
        MDSwiper:
            size_hint_y: None
            height: root.height - dp(200)
            y: root.height - self.height - dp(300)

            # By default, there's three upcoming workouts displayed, user can readjust.
            WorkoutItem:
            WorkoutItem:
            WorkoutItem:
            

        FloatingPlusButton: