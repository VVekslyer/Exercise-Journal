#: include widgets/CalendarDay.kv
#: import CalendarDay widgets.CalendarDay

<Home>:
    BoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        adaptive_width: True

        MDLabel:
            font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'
            text: "\nWelcome back,"
            font_size: '14sp'
            size_hint: (1, .1)
            #padding_y: '10dp'
            padding_x: '15dp'
        
        
        MDLabel:
            text: app.user_name + "."
            font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'
            font_size: '30sp'
            size_hint: (1, .05)
            padding_x: '15dp'
            y: root.height

        # Calendar
        # A horizontal list of buttons
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1.0, 0.2
            ScrollView:
                size_hint: 1.0, None
                do_scroll_y: False
                bar_color: [0, 0, 0, 0]
                bar_inactive_color: [0, 0, 0, 0]
                GridLayout:
                    size_hint_x: None
                    rows: 1
                    col_default_width: root.width*0.15
                    width: self.minimum_width
                    spacing: dp(10)
                    padding: [dp(20), 0, 0, 0]

                    CalendarDay:
                        DayLabel:
                            text: 'Wed'
                        Date:
                            icon: 'assets/images/calendar-circle.png'
                            DateLabel: 
                                text: '7'
                                color: 1, 1, 1, 1

                    CalendarDay:
                        DayLabel:
                            text: 'Thu'
                        Date:
                            DateLabel: 
                                text: '8'

                    CalendarDay:
                        DayLabel:
                            text: 'Fri'
                        Date:
                            DateLabel: 
                                text: '9'

                    CalendarDay:
                        DayLabel:
                            text: 'Sat'
                        Date:
                            DateLabel: 
                                text: '10'

                    CalendarDay:
                        DayLabel:
                            text: 'Sun'
                        Date:
                            DateLabel: 
                                text: '11'

                    CalendarDay:
                        DayLabel:
                            text: 'Mon'
                        Date:
                            DateLabel: 
                                text: '12'

                    CalendarDay:
                        DayLabel:
                            text: 'Tue'
                        Date:
                            DateLabel: 
                                text: '13'

                    CalendarDay:
                        DayLabel:
                            text: 'Wed'
                        Date:
                            DateLabel: 
                                text: '14'

                    CalendarDay:
                        DayLabel:
                            text: 'Thu'
                        Date:
                            DateLabel: 
                                text: '15'

                    CalendarDay:
                        DayLabel:
                            text: 'Fri'
                        Date:
                            DateLabel: 
                                text: '16'


                    

                
                
        
        MDLabel:
            text: "Workout form goes here"
            size_hint: (1, 1)

        MDFillRoundFlatButton:
            text: "Add Workout"
            text_color: 1, 1, 1, 1
            md_bg_color: 0.73, 0.49, 0.28, 1
            font_size: "18sp"
            size_hint: 0.8, None
            pos_hint: {'center_x': 0.5, 'center_y' : 0.7}
            font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'
            on_release: app.go_to(self, 'start-screen')
            line_color: 0.73, 0.49, 0.28, 1