<Home>:
    BoxLayout:
        orientation: 'vertical'

        
        MDLabel:
            font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'
            text: "\nWelcome back,"
            font_size: '14sp'
            size_hint: (1, .1)
            padding_y: '10dp'
            padding_x: '15dp'
        
        
        MDLabel:
            text: app.user_name + "."
            font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'
            font_size: '30sp'
            size_hint: (1, .05)
            padding_x: '15dp'
            y: root.height

        # Calendar
        MDSwiper:
            size_hint_y: None
            elevation: 10

            MDSwiperItem:
                color: 0,0,0,1
                MDLabel:
                    text: "Hello"
                    

            MDSwiperItem:
                color: 0,0,0,1
                MDLabel:
                    text: "TEST"

            MDSwiperItem:
                color: 0,0,0,1
                MDLabel:
                    text: "Hello World!"


            

        MDLabel:
            text: "Workout form goes here"
            size_hint: (1, 1)

        MDFillRoundFlatButton:
            text: "Add Workout"
            text_color: 1, 1, 1, 1
            md_bg_color: 0.73, 0.49, 0.28, 1
            font_size: "18sp"
            size_hint: 0.8, None
            pos_hint: {'center_x': 0.5, 'center_y' : 0.7}
            font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'
            on_release: app.go_to(self, 'start-screen')
            line_color: 0.73, 0.49, 0.28, 1