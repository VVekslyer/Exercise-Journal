<Date>:
    id: date_button
    icon: ''
    md_bg_color: (250/255,250/255,250/255, 1)
    #on_release: self.toggle(root.ids.date_label)

<DateLabel>:
    text: "1"
    name: 'date'
    id: date_label
    font_size: '14sp'
    color: 0,0,0,1
    halign: 'center'
    valign: 'middle'
    font_name: 'assets/fonts/Sofia-Pro-Regular.ttf'

<DayLabel@MDLabel>:
    text: "Mon"
    id: day_of_week_label
    name: 'day_of_week'
    color: 0,0,0,1
    pos_hint: {'x': .045}
    font_name: 'assets/fonts/Sofia-Pro-Extra-Light.ttf'
    valign: 'middle'
    halign: 'center'
    size_hint: None, None
    height: dp(35)
    width: dp(40)

<CalendarDay@BoxLayout>:
    id: calendar_day
    orientation: 'vertical'
