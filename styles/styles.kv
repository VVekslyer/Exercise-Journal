<H4@MDLabel>:
    font_style: 'H4'
    font_size: '40sp'
    font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'

<H3@MDLabel>:
    text_size: self.size
    halign: 'left'
    font_style: 'H3'
    font_size: '40sp'
    font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'

<WhiteAppButton@MDRoundFlatButton>:
    text_color: 0.73, 0.49, 0.28, 1
    md_bg_color: 1, 1, 1, 1
    line_color: 0.73, 0.49, 0.28, 1
    size_hint: None, None
    height: dp(25)
    #width: root.width * 0.8
    pos_hint: {'center_x': 0.5}
    font_size: "18sp"
    font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'

<AppButton@MDFillRoundFlatButton>:
    text_color: 1, 1, 1, 1
    md_bg_color: 0.73, 0.49, 0.28, 1
    size_hint: None, None
    #width: root.width * 0.8
    font_size: '18sp'
    font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'

<AppIconButton@MDFillRoundFlatIconButton>:
    font_size: "18sp"
    text_size: self.size
    text_color: 1, 1, 1, 1
    md_bg_color: 0.27, 0.42, 0.93, 1
    size_hint: None, None
    font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'

<AppTextButton@MDTextButton>:
    color: (0,0,0,1)
    halign: 'center'
    font_size: "12sp"
    font_name: 'assets/fonts/Sofia-Pro-Light.ttf'

<BlackBackground@MDBoxLayout>:
    orientation: 'vertical'
    md_bg_color: (0,0,0,1)

<WhiteBackground@MDBoxLayout>:
    orientation: 'vertical'
    md_bg_color: (1,1,1,1)

<Paragraph@MDLabel>:
    markdown: True
    text_size: self.size
    line_height: 1.5
    color: (0,0,0,1)
    halign: 'left'
    font_size: "18sp"
    font_name: 'assets/fonts/Sofia-Pro-Light.ttf'

<AppTextField@MDTextField>:
    helper_text_mode: 'on_focus'
    color_mode: 'custom'
    size_hint: None, None
    line_color_focus: 0, 0, 0, 1
    line_color_normal: 0, 0, 0, 1
    valign: 'top'
    line_color: 0.73, 0.49, 0.28, 1
    specific_text_color: (0,0,0,1)
    font_name: 'assets/fonts/Sofia-Pro-Light.ttf'
