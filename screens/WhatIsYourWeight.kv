<WhatIsYourWeight>:
    MDTextButton:
        id: kg
        name: 'kg'
        text: "KG "
        color: (0, 0, 0, 1)
        pos_hint: {'center_x': 0.81, 'center_y': 0.605}
        font_size: "18sp"
        on_release: root.toggle(self)
        font_name: 'assets/fonts/Sofia-Pro-Light.ttf'
        #size_hint: None,None

    MDLabel:
        text: "|"
        pos_hint: {'center_x': 1.351 ,  'center_y': 0.605}
        font_size: "18sp"
        font_name: 'assets/fonts/Sofia-Pro-Light.ttf'

    MDTextButton:
        id: lbs
        name: 'lbs'
        text: "LBS "
        color: (0, 0, 0, 1)
        pos_hint: {'center_x': 0.91, 'center_y': 0.605}
        font_size: "18sp"
        font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'
        on_release: root.toggle(self)
        #size_hint: None,None

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            md_bg_color: app.theme_cls.bg_light
            left_action_items: [["arrow-left", lambda x: app.go_back(x, 'what-are-your-goals')]]
            specific_text_color: (0,0,0,1)

        H4:
            text: "    What is your\n    weight?"
            size_hint: None, None
            width: root.width
            height: root.height * 0.26
            pos_hint: {'center_y': 0.5}
            padding_y: dp(50)

        MDTextField:
            id: weight_field
            hint_text: "Please enter a valid weight"
            helper_text_mode: "on_focus"
            color_mode: 'custom'
            line_color_focus: 0, 0, 0, 1
            line_color_normal: 0, 0, 0, 1
            valign: 'top'
            pos_hint: {'center_x': 0.45, 'center_y': 0.2}
            size_hint: None, None
            height: dp(30)
            width: dp(150)
            line_color: 0.73, 0.49, 0.28, 1
            right_action_items: [["arrow-left", lambda x: app.go_back(x, 'what-are-your-goals')]]
            specific_text_color: (0,0,0,1)
            font_name: 'assets/fonts/Sofia-Pro-Light.ttf'

        MDBoxLayout:
            orientation: 'vertical'
            #size_hint: (1.0, 0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: 20

            MDFillRoundFlatButton:
                text: "Continue"
                text_color: 1, 1, 1, 1
                md_bg_color: 0.73, 0.49, 0.28, 1
                font_size: "18sp"
                size_hint: None, None
                width: root.width * 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.25}
                font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'
                on_release: app.go_to(self, 'what-is-your-height')
                line_color: 0.73, 0.49, 0.28, 1
                on_release: app.current_user.weight = weight_field.text + ' ' + root.unit.lower()

            MDTextButton:
                text: "Skip For Now"
                color: (0, 0, 0, 1)
                valign: 'center'
                pos_hint: {'center_x': 0.5}
                font_size: "12sp"
                font_name: 'assets/fonts/Sofia-Pro-Light.ttf'
                on_release: app.go_to(self, 'what-is-your-height')
                #size_hint: (None, None)

        MDBottomAppBar:
