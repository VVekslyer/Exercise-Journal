<WhatIsYourLevel>:
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            md_bg_color: app.theme_cls.bg_light
            left_action_items: [["arrow-left", lambda x: app.go_back(x, 'signup-with-email')]]
            specific_text_color: (0,0,0,1)

        H4:
            text: "    What is \n    your level?"
            pos_hint: {'center_y': 0.5}

        MDBoxLayout:
            orientation: 'vertical'
            spacing: 20

            WhiteAppButton:
                text: "Beginner"
                text_color: 0.73, 0.49, 0.28, 1
                size_hint: None, None
                width: root.width * 0.8
                height: dp(25)
                pos_hint: {'center_x': 0.5}
                on_release: app.current_user.level = 'Beginner'

            WhiteAppButton:
                text: "Intermediate"
                text_color: 0.73, 0.49, 0.28, 1
                size_hint: None, None
                width: root.width * 0.8
                height: dp(25)
                pos_hint: {'center_x': 0.5}
                on_release: app.current_user.level = 'Intermediate'

            WhiteAppButton:
                text: "Advanced"
                text_color: 0.73, 0.49, 0.28, 1
                size_hint: None, None
                width: root.width * 0.8
                height: dp(25)
                pos_hint: {'center_x': 0.5}
                on_release: app.current_user.level = 'Advanced'

        MDBoxLayout:
            orientation: 'vertical'
            #size_hint: 1.0, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: 20

            MDFillRoundFlatButton:
                text: "Continue"
                text_color: 1, 1, 1, 1
                md_bg_color: 0.73, 0.49, 0.28, 1
                font_size: "18sp"
                size_hint: None, None
                width: root.width * 0.8
                valign: 'center'
                height: dp(25)
                pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                font_name: 'assets/fonts/Sofia-Pro-Medium.ttf'
                on_release: app.go_to(self, 'what-is-your-weight')

            MDTextButton:
                text: "Skip For Now"
                color: (0, 0, 0, 1)
                valign: 'center'
                pos_hint: {'center_x': 0.5}
                font_size: "12sp"
                font_name: 'assets/fonts/Sofia-Pro-Light.ttf'
                size_hint: None,None

        MDBottomAppBar:
