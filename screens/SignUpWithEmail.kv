<SignUpWithEmail>:
    WhiteBackground:

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            md_bg_color: app.theme_cls.bg_light
            left_action_items: [["arrow-left", lambda x: app.go_back(x, 'start-screen')]]
            specific_text_color: (0,0,0,1)

        H4:
            text: "    What is \n    your email?"
            width: root.width
            height: root.height * 0.1
            pos_hint: {'center_y': 0.5}

        AppTextField:
            id: email_textfield
            hint_text: "Please enter a valid email address."
            pos_hint: {'center_x': 0.5}
            height: dp(20)
            width: dp(275)

        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: 20

            AppButton:
                text: "Continue"
                width: root.width * 0.8
                pos_hint: {'center_x': 0.5, 'center_y': 0.25}
                on_release: app.go_to(self, 'what-are-your-goals')
                on_press: app.current_user.email = root.ids.email_textfield.text

            AppTextButton:
                text: "Skip For Now"
                pos_hint: {'center_x': 0.5}
                size_hint: None, None
                on_release: app.go_to(self, 'what-are-your-goals')

        MDBottomAppBar:
