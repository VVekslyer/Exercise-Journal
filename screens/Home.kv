<Home>:
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "\nWelcome back,"
            font_name: 'assets/fonts/Sofia-Pro-Semi-Bold.ttf'
            font_size: '14sp'
            size_hint: None, None
            width: root.width
            height: root.height * 0.05
            padding_x: dp(15)
