<StartingScreen>:
    BlackBackground:

    H3:
        text: "Welcome."
        x: dp(55)
        y: root.height - dp(160)
        color: (1,1,1,1)
        #on_touch_down: root.move_text_upwards(self)

    Paragraph:
        text: " \ntrack your exercise \nprogress for accountability."
        color: (1,1,1,1)
        y: root.height - dp(220)
        x: dp(55)

    AppButton:
        text: "Sign Up"
        width: root.width * 0.8
        height: root.width * 0.12
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_release: app.go_to(self, 'signup-with-email')

    MDLabel:
        text: "Or"
        color: (1, 1, 1, 1)
        halign: 'center'
        pos_hint: {'center_y': 0.23}
        font_size: "12sp"
        font_name: 'assets/fonts/Sofia-Pro-Light.ttf'

    AppIconButton:
        text: "         Log in with Google"
        icon: "google"
        width: root.width * 0.8
        height: root.width * 0.12
        pos_hint: {'center_x': 0.5, 'center_y': 0.16}
        on_release: app.go_to(self, 'loading-screen')

    AppTextButton:
        text: "Or Log in"
        color: (1,1,1,1)
        pos_hint: {'center_x': 0.5, 'center_y': 0.09}
        on_release: app.go_to(self, 'login-screen')
